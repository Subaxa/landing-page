---


export interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Damos un servicio con tecnología de punta", 
  subtitle = "Olvídate de las plataformas inmobiliarias tradicionales y disfruta de una experiencia inmobiliaria moderna y segura."
} = Astro.props;
---

  <section class="relative py-20 overflow-hidden gradient-hero">
    <div class="absolute inset-0 backdrop-blur-[220px]"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl mb-6">
        {title}
      </h2>
      <p class="text-xl text-white/80 max-w-4xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>

    <!-- Tech Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-8">
      
      <!-- Potenciado por IA -->
      <div class="group relative">
        <div class="backdrop-blur-sm bg-white/10 border border-white/20 rounded-2xl p-8 h-full transition-all duration-300 hover:bg-white/20 hover:scale-105">
          <div class="text-center">
            <!-- Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            
            <h3 class="text-white text-xl font-bold mb-4">Potenciado por IA</h3>
            <p class="text-white/80 text-sm leading-relaxed">
              Análisis avanzado de datos e insights inteligentes para tomar las mejores decisiones de inversión.
            </p>
          </div>
        </div>
      </div>

      <!-- En cualquier lugar/momento -->
      <div class="group relative">
        <div class="backdrop-blur-sm bg-white/10 border border-white/20 rounded-2xl p-8 h-full transition-all duration-300 hover:bg-white/20 hover:scale-105">
          <div class="text-center">
            <!-- Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            
            <h3 class="text-white text-xl font-bold mb-4">En cualquier lugar/momento</h3>
            <p class="text-white/80 text-sm leading-relaxed">
              Accede a tu cuenta desde cualquier dispositivo, en cualquier momento del día.
            </p>
          </div>
        </div>
      </div>

      <!-- Actualizaciones -->
      <div class="group relative">
        <div class="backdrop-blur-sm bg-white/10 border border-white/20 rounded-2xl p-8 h-full transition-all duration-300 hover:bg-white/20 hover:scale-105">
          <div class="text-center">
            <!-- Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-violet-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4 19h6v-2H4v2zM13 5h7l-7 7V5zM4 11h6V9H4v2z"></path>
              </svg>
            </div>
            
            <h3 class="text-white text-xl font-bold mb-4">Actualizaciones</h3>
            <p class="text-white/80 text-sm leading-relaxed">
              Notificaciones en tiempo real para mantenerte informado sobre todas las oportunidades.
            </p>
          </div>
        </div>
      </div>

      <!-- Seguro -->
      <div class="group relative">
        <div class="backdrop-blur-sm bg-white/10 border border-white/20 rounded-2xl p-8 h-full transition-all duration-300 hover:bg-white/20 hover:scale-105">
          <div class="text-center">
            <!-- Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-600 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            
            <h3 class="text-white text-xl font-bold mb-4">Seguro</h3>
            <p class="text-white/80 text-sm leading-relaxed">
              Transacciones seguras y protegidas con la más alta tecnología de encriptación.
            </p>
          </div>
        </div>
      </div>

    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <button class="bg-white text-gray-900 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl">
        APP PRÓXIMAMENTE →
      </button>
    </div>
  </div>
</section>
