---
// Contact Us box component for footer integration
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Contáctanos", description = "Ponte en contacto con nuestro equipo" } = Astro.props;
---

<div class="lg:col-span-2">
	<div class="backdrop-blur bg-white/5 border border-white/20 rounded-3xl shadow-2xl p-6 md:p-8 hover:bg-white/10 transition-all duration-300">
		<div class="text-center space-y-6">
			<h2 class="text-white text-2xl md:text-xl font-bold tracking-tight">
				{title}
			</h2>

			<p class="text-white/70 text-sm md:text-base leading-relaxed">
				{description}
			</p>

			<div class="pt-2 space-y-4">
				<!-- Email Input -->
				<div>

					<button class="w-full bg-azul-electrico hover:bg-blue-600 text-white px-6 py-3 rounded-xl font-bold text-sm transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center gap-2 border border-white/20">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
						</svg>
						whatsapp: 000000
					</button>
				</div>

				<!-- Schedule Meeting Button -->
				<div>
					<button class="w-full bg-azul-electrico hover:bg-blue-600 text-white px-6 py-3 rounded-xl font-bold text-sm transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center gap-2 border border-white/20">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
						</svg>
						info@subaxa.com
					</button>
				</div>
				<div>
					<button class="w-full bg-azul-electrico hover:bg-blue-600 text-white px-6 py-3 rounded-xl font-bold text-sm transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center gap-2 border border-white/20">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
						</svg>
						Alajuela, San Carlos, Ciudad Quesada, Urbanización Los Rojas, edificio blanco en oficinas Rouga Asesores
					</button>
				</div>

			</div>
		</div>
	</div>
</div>

<style>
	/* Custom focus styles for the input */
	input:focus {
		transform: translateY(-1px);
		box-shadow: 0 4px 20px rgba(41, 121, 255, 0.25);
	}

	/* Hover effect for the entire card */
	.backdrop-blur-enhanced:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
	}

	/* Glassmorphism input styling */
	input::placeholder {
		color: rgba(255, 255, 255, 0.5);
	}
</style>
