---
// About Us component with black background and Tailwind structure
export interface Props {
  title?: string;
  subtitle?: string;
}
import Logotipo7 from '../../public/Logotipo-01.png'

const {
  title = "experiencia + propósito",
  subtitle = "Somos un equipo de expertos en tecnología, abogados y especialistas en inversiones que creemos en democratizar el acceso a los remates en Costa Rica."
