---
export interface Props {
  title: string;
  description?: string;
  actionButton?: boolean;
}

const { title, description, actionButton } = Astro.props;
---

<div class="relative isolate flex items-center justify-start gap-x-6 overflow-hidden px-6 py-2.5 sm:px-3.5 bg-color-naranja-accion">
    <div class="gap-x-4 gap-y-2">
      <p class="text-sm/6 text-white">
        <strong class="font-semibold">{title}</strong>
        {description && (
          <>
            <svg viewBox="0 0 2 2" aria-hidden="true" class="mx-2 inline size-0.5 fill-current"><circle r="1" cx="1" cy="1" /></svg>
            <span>{description}</span>
          </>
        )}
      </p>
    </div>
    
</div>
  