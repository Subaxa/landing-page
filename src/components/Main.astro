---
import TopBanner from './TopBanner.astro';
import Services from './services.astro';
import Feature from './Feature.astro';
import MobileApp from '../../public/MobileApp.png'
---

<section id="main" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-28 gradient-hero">
<section class="absolute inset-0 gradient-color opacity-90"></section>


  <div class="relative z-10 w-full h-full  max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 rounded-t-[100px] p-10">
    <div class="grid grid-cols-1 h-full lg:grid-cols-2 items-center gap-12">
      <!-- Left: Copy -->
      <div class="text-center lg:text-left">

        <h3 class="hero-heading text-5xl sm:text-6xl md:text-7xl lg:text-7xl xl:text-7xl font-bold text-white mb-8 leading-tight tracking-tight">
          Invertir, comprar casa o terreno
          <br>
          <span class="italic font-light opacity-95 text-white/90"> f√°cil y seguro a un click</span>
        </h3>
        <div class="mt-10">

					<button class="border-2 border-white text-white px-8 py-3 rounded-full font-semibold hover:bg-white hover:text-gray-900 transition-all duration-200">
						Ver Demo
					</button>
        </div>
      </div>

      <!-- Right: App image -->
      <div class="flex justify-center lg:justify-end">
        <img src={MobileApp.src} alt="App preview" class="w-[90%] max-w-md lg:max-w-lg drop-shadow-2xl" loading="lazy" decoding="async" />
      </div>
    </div>
  </div>
</section>
