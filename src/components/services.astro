---
import Contactbox from "./ContactBox.astro";
import TechSection from "./TechSection.astro";
import Logotipo7 from "../../public/Logotipo-01.png"
// No props needed for this component
---
<section id="contact" class="relative overflow-hidden bg-gray-50 py-24">
  <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header Section -->
    <div class="text-center mb-16">
      <div class="flex items-center justify-center mb-8">
        <img src={Logotipo7.src} alt="SUBAXA Logo" class="h-16 sm:h-20 md:h-24 lg:h-28 object-contain">
      </div>
    </div>

    <!-- Contact Section -->
    <div class="bg-white rounded-3xl shadow-lg p-8 lg:p-12">
      <Contactbox 
        title="Hagamos realidad tu sueño" 
        description="Ponemos a tu disposición los mejores servicios para que puedas invertir en bienes raíces con confianza." 
      />
    </div>
    
  </div>
</section>

<style>
  /* Smooth transitions for interactive elements */
  .bg-white {
    transition: all 0.3s ease;
  }
  
  .bg-white:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
</style> 
